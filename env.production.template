# FuMu Production Environment Configuration Template
# Copy this file to .env.production and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fumu_production"
DIRECT_URL="postgresql://username:password@localhost:5432/fumu_production"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Clerk Authentication
CLERK_PUBLISHABLE_KEY="pk_live_your_publishable_key_here"
CLERK_SECRET_KEY="sk_live_your_secret_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# AI Service APIs
OPENAI_API_KEY="sk-your_openai_api_key_here"
GOOGLE_AI_API_KEY="your_google_ai_api_key_here"
RUNWAY_API_KEY="your_runway_api_key_here"

# AWS Configuration
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="fumu-production-assets"
AWS_CLOUDFRONT_DOMAIN="d1234567890.cloudfront.net"

# Application Configuration
NODE_ENV="production"
PORT="3000"
API_PORT="3001"
FRONTEND_URL="https://fumu.app"
API_URL="https://api.fumu.app"

# File Upload Configuration
MAX_FILE_SIZE="50MB"
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
ALLOWED_VIDEO_TYPES="video/mp4,video/webm,video/mov"

# Video Processing Configuration
FFMPEG_PATH="/usr/local/bin/ffmpeg"
VIDEO_PROCESSING_TIMEOUT="300000"
MAX_VIDEO_DURATION="300"
MAX_VIDEO_SIZE="500MB"

# Security Configuration
JWT_SECRET="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_encryption_key_here"
CORS_ORIGINS="https://fumu.app,https://www.fumu.app"

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="your_sentry_dsn_here"
NEW_RELIC_LICENSE_KEY="your_newrelic_license_key"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_email_password"
FROM_EMAIL="noreply@fumu.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Feature Flags
ENABLE_VIDEO_PROCESSING="true"
ENABLE_AI_GENERATION="true"
ENABLE_CHARACTER_CONSISTENCY="true"
ENABLE_BACKGROUND_MUSIC="true"
