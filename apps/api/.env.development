# FuMu Development Environment Configuration Template
# Copy this file to .env.development and update with your actual values

# Database Configuration (SQLite for development)
DATABASE_URL="file:./dev.db"
DIRECT_URL="file:./dev.db"

# Redis Configuration (Optional for development)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Clerk Authentication (Development keys)
CLERK_PUBLISHABLE_KEY="pk_test_your_development_key_here"
CLERK_SECRET_KEY="sk_test_your_development_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# AI Service APIs (Development keys)
OPENAI_API_KEY="sk-your_openai_api_key_here"
GOOGLE_AI_API_KEY="your_google_ai_api_key_here"
RUNWAY_API_KEY="your_runway_api_key_here"

# AWS Configuration (Development)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="fumu-development-assets"
AWS_CLOUDFRONT_DOMAIN="d1234567890.cloudfront.net"

# Application Configuration
NODE_ENV="development"
PORT="3000"
API_PORT="3001"
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# File Upload Configuration
MAX_FILE_SIZE="50MB"
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
ALLOWED_VIDEO_TYPES="video/mp4,video/webm,video/mov"

# Video Processing Configuration
FFMPEG_PATH="/usr/local/bin/ffmpeg"
VIDEO_PROCESSING_TIMEOUT="300000"
MAX_VIDEO_DURATION="300"
MAX_VIDEO_SIZE="500MB"

# Security Configuration
JWT_SECRET="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_encryption_key_here"
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Monitoring & Logging
LOG_LEVEL="debug"

# Feature Flags
ENABLE_VIDEO_PROCESSING="true"
ENABLE_AI_GENERATION="true"
ENABLE_CHARACTER_CONSISTENCY="true"
ENABLE_BACKGROUND_MUSIC="true"
